<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_vertical">

        <TextView
            android:id="@+id/field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_weight="0.10"
            android:gravity="center_vertical"
            android:text="Photos"
            android:textSize="@dimen/very_large" />
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="350dp"
        android:gravity="center_vertical" >

	    
	    <ImageView android:id="@+id/image"
	    		   android:layout_width="fill_parent"
	    		   android:layout_height="wrap_content"/>

	    		   
   	</RelativeLayout>
 <RelativeLayout
             android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" >

    <EditText
        android:id="@+id/picDescText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView1"
        android:ems="10"
        android:text=""
        android:textSize="@dimen/padding_large" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_weight="0.10"
        android:text="Desc"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" >

	<Button
	    android:id="@+id/saveButton"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBaseline="@+id/photoButton"
	    android:layout_alignBottom="@+id/photoButton"
	    android:layout_toRightOf="@+id/photoButton"
	    android:text="Save Picture" />

	<Button
	    android:id="@+id/cancelButton"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentTop="true"
	    android:layout_toRightOf="@+id/saveButton"
	    android:text="Cancel" />

	<Button
	    android:id="@+id/photoButton"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentTop="true"
	    android:text="Take Photo" />
	
	</RelativeLayout>
</LinearLayout>
